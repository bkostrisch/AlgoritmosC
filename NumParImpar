int main() {
	int num;
	printf("Digite um n%cmero: \n",	163);
	scanf("%d", &num);
	system("cls");
	if(num%2 == 0){
		printf("O n%cmero %c par.", 163, 130);
	}
	else{
		printf("O n%cmero %c %cmpar.", 163, 130, 161);
	}	
	return 0;
}
