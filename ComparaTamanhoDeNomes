#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main() {
	int t1, t2;
	char nome1[50], nome2[50];
	printf("Digite um nome:\n");
	gets(nome1);
	t1=strlen(nome1) ;
	printf("\nDigite outro nome:\n");
	gets(nome2);
	t2=strlen(nome2) ;
	system("cls");
	if(t1>t2){
		printf("O nome %s %c maior que o nome %s.",nome1,130,nome2);
	}
	else if(t2>t1){
		printf("O nome %s %c maior que o nome %s.",nome2,130,nome1);
	}
	else{
		printf("O nome %s %c do mesmo tamanho que o nome %s.",nome1,130,nome2);
	}
	
	
	return 0;
}
